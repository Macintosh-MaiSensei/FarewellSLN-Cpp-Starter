{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build All Files (d)",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${fileDirname}/*.cpp",
                "-o",
                "${workspaceFolder}/build/bin/Debug/${fileBasenameNoExtension}.exe",
                "-include",
                "${workspaceFolder}/include/stdafx.h",
                "-I",
                "F:/APP/VSCODE_CPP/include",
                "-L${workspaceFolder}/lib",
                "-Wall",
                "-Wextra",
                "-std=c++20",
                "-fmodules-ts",
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "编译当前所有的C++文件(64位)"
        },
        {
            "label": "Build Single File (d)",
            "type": "shell",
            "command": "g++",
            "args": [
                "-include",
                "${workspaceFolder}/include/stdafx.h",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/build/bin/Debug/${fileBasenameNoExtension}.exe",
                "-I",
                "${workspaceFolder}/include",
                "-L${workspaceFolder}/lib",
                "-Wall",
                "-Wextra",
                "-std=c++20",
                "-fmodules-ts",
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "编译单个C++文件(64位)"
        },
